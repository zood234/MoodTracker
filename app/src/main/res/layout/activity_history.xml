        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fiveDaysAgoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Five Days Ago" />

        <ImageView
            android:id="@+id/comment5DaysAgo"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_comment_black_48px"
            android:contentDescription="How many days ago" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day4Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/fourDaysAgoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Four Days Ago" />

        <ImageView
            android:id="@+id/comment4DaysAgo"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_comment_black_48px"
            android:contentDescription="How many days ago" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/day3Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/threeDaysAgoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Three Days Ago" />

        <ImageView
            android:id="@+id/comment3DaysAgo"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_comment_black_48px"
            android:contentDescription="How many days ago" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/day2Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
